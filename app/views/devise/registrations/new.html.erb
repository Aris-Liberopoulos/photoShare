<div class="row">
  <h2 class="col-sm-offset-4 col-sm-4 text-center">Sign up</h2>
</div>
<div class="row">&nbsp;</div>
<div class="row">&nbsp;</div>
<div class="row">
  <div class="form col-sm-offset-4 col-sm-4">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'partials/error_messages', object: resource %>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: 'form-control input-lg', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control input-lg' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'form-control input-lg', autocomplete: 'off' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: 'form-control input-lg', autocomplete: 'off' %>
      </div>

      <div class="row">&nbsp;</div>
      <div class="row">&nbsp;</div>
      <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
          <div class="form-group text-center">
            <%= f.submit "Sign up", class: 'btn btn-success btn-block' %>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>