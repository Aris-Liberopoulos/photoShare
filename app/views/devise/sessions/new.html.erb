<div class="row">
  <h2 class="col-sm-offset-4 col-sm-4 text-center">Log in</h2>
</div>
<div class="row">&nbsp;</div>
<div class="row">&nbsp;</div>
<div class="row">
  <div class="form col-sm-offset-4 col-sm-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control input-lg', autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control input-lg', autocomplete: 'off' %>
      </div>
      <div class="form-group"></div>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
      <div class="row">&nbsp;</div>
      <div class="row">&nbsp;</div>
      <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
          <div class="form-group text-center">
            <%= f.submit 'Login', class: 'btn btn-success btn-block' %>
          </div>
        </div>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>

