<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="well">
        <%= image_tag @pin.image(:medium), class: 'center-block' %>
        <p class="description">
          <%= @pin.description %>
        </p>
        <p class="userinfo">
          <strong>
            Posted by <%= @pin.user.name %>
          </strong>
        </p>
        <% if current_user == @pin.user %>
          <%= link_to 'Edit', edit_pin_path(@pin) %> |
        <% end %>
        <%= link_to 'Back', pins_path %>
      </div>
    </div>
  </div>
</div>


