
<div class="box panel panel-default">
  <%= link_to (image_tag pin.image.url), pin %>
  <div class="panel-body">
    <p>
      <%= pin.description %>
    </p>
    <p>
      <strong>
        Posted by <%= pin.user.name %>
      </strong>
    </p>

    <% if current_user == pin.user %>
      <p>
        <%= link_to '<i class= "fa fa-pencil" data-toggle="tooltip" data-placement="top" title="Edit"></i>'.html_safe, edit_pin_path(pin) %> |
        <%= link_to '<i class= "fa fa-trash-o" data-toggle="tooltip" data-placement="top" title="Delete"></i>'.html_safe, pin, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    <% end %>
    </div>
</div>
